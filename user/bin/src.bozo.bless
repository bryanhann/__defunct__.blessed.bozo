#!/bin/sh


__main__ () {
    dst=$1
    src=$2
    shift 2
    situ=${dst}/.insitu
    [ -d ${dst}     ] || git clone ${src} ${dst} $*
    [ -d ${dst}     ] || echo could not establish dst [$dst]
    [ -d ${dst}     ] || return
    [ -d ${situ}    ] || missing [$situ]
    [ -d ${situ}    ] || return
    pushd ${situ} > /dev/null
    . ./activate
    popd > /dev/null
}
__main__ $*
